<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<FlowPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.timeapplication.HelloController" stylesheets="/styles.css">
    <VBox>
        <HBox>
            <Button text="Start/pause" onAction="#onStartButtonClick"/>
            <Label fx:id="timerField">00:00:00</Label>
            <Button text="End" onAction="#onEndButtonClick"/>
        </HBox>
        <HBox>
            <Label text="Goal:"/>
            <TextField fx:id="goalTextField" onAction="#setGoalTextField" promptText="Enter?"/>
        </HBox>
        <HBox>
            <Label text="Note:"/>
            <TextField promptText="Enter"/>
        </HBox>
    </VBox>
</FlowPane>
